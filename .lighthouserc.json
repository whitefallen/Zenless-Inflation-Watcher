{
  "ci": {
    "collect": {
      "numberOfRuns": 3,
      "startServerCommand": "echo 'Server not needed for static site'",
      "startServerReadyPattern": "echo 'Ready'"
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", {"minScore": 0.5}],
        "categories:best-practices": ["error", {"minScore": 0.5}],
        "categories:seo": ["error", {"minScore": 0.5}],
        "categories:pwa": ["error", {"minScore": 0.5}]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}