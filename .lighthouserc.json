{
  "ci": {
    "collect": {
      "numberOfRuns": 1,
      "startServerCommand": "echo 'Server not needed for static site'",
      "startServerReadyPattern": "echo 'Ready'"
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", {"minScore": 0.5}],
        "categories:best-practices": ["warn", {"minScore": 0.5}],
        "categories:seo": ["warn", {"minScore": 0.5}],
        "categories:pwa": ["warn", {"minScore": 0.5}]
      }
    },
    "upload": {
      "target": "temporary-public-storage",
      "reportFilenamePattern": "%%PATHNAME%%-%%DATETIME%%-report"
    }
  }
}