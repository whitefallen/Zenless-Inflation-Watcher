<div class="section">
  <h2>ðŸŽ¯ Deadly Assault Report</h2>
  <div class="summary-grid">
    <div class="summary-item">
      <h3>Season</h3>
      <div class="summary-value">{{season}}</div>
    </div>
    <div class="summary-item">
      <h3>Player</h3>
      <div class="summary-value">{{player}}</div>
    </div>
    <div class="summary-item">
      <h3>Total Score</h3>
      <div class="summary-value">{{totalScore}}</div>
    </div>
    <div class="summary-item">
      <h3>Total Stars</h3>
      <div class="summary-value">{{totalStars}}</div>
    </div>
    <div class="summary-item">
      <h3>Rank Percent</h3>
      <div class="summary-value">{{rankPercent}}</div>
    </div>
  </div>

  {{#if bossClears}}
  <h3>Boss Clears</h3>
  {{#each bossClears}}
  <div class="boss-clear">
    <h4>{{@index}}. {{bossName}}</h4>
    <div class="boss-stats">
      <span class="stat">Score: {{score}}</span>
      <span class="stat">Stars: {{stars}}</span>
      <span class="stat">Time: {{time}}</span>
    </div>

    {{#if buffs}}
    <div class="buffs">
      <h5>Buffs:</h5>
      {{#each buffs}}
      <div class="buff">
        <strong>{{name}}:</strong> {{description}}
      </div>
      {{/each}}
    </div>
    {{/if}}

    {{#if team}}
    <div class="team">
      <h5>Team:</h5>
      <div class="avatars">
        {{#each team}}
        <div class="avatar" style="border-left: 4px solid {{elementColor}}">
          <span class="rarity {{rarity}}">{{rarity}}</span>
          <span class="level">Lv.{{level}}</span>
          <span class="element">{{elementName}}</span>
          <span class="id">(ID: {{id}})</span>
        </div>
        {{/each}}
      </div>
    </div>
    {{/if}}

    {{#if buddy}}
    <div class="buddy">
      <h5>Buddy:</h5>
      <div class="avatar" style="border-left: 4px solid #8B4513">
        <span class="rarity {{buddy.rarity}}">{{buddy.rarity}}</span>
        <span class="level">Lv.{{buddy.level}}</span>
        <span class="id">(ID: {{buddy.id}})</span>
      </div>
    </div>
    {{/if}}
  </div>
  {{/each}}
  {{/if}}
</div> 